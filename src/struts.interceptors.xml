<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">
 
<struts>
	
	<package name="customInterceptors" extends="struts-default">

		<interceptors>
			<interceptor name="loginInterceptor"
			class="org.sourcelesslight.interceptors.LoginInterceptor"/>
			
			<interceptor-stack name="customStack01">
				<interceptor-ref name="loginInterceptor"/>
				<interceptor-ref name="defaultStack"/>
				<interceptor-ref name="cookie">
		   			<param name="cookiesName">cookie_id</param>
		   			<param name="cookiesValue"></param>
		   		</interceptor-ref>
		   		<interceptor-ref name="cookieProvider"/>
			</interceptor-stack>
			
			<interceptor-stack name="userLevelSecurityStack">
				<interceptor-ref name="loginInterceptor"/>
				<interceptor-ref name="cookie"/>
				<interceptor-ref name="basicStack"/>
			</interceptor-stack>
			
		</interceptors>
		
		<global-results>
    		
    		<result name="loginRedirect" type="redirectAction">
			 	<param name="actionName">welcome</param>
            	<param name="namespace">/</param>
			</result>
			
		</global-results>
	
	</package>

</struts>