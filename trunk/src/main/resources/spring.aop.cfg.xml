<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:aop="http://www.springframework.org/schema/aop"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
		http://www.springframework.org/schema/aop 
		http://www.springframework.org/schema/aop/spring-aop-3.2.xsd 
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- Aspect Oriented Programming -->

		<aop:aspectj-autoproxy/>
		
	<!-- AOP and Logging Related Beans -->
	
		<bean name="loggingAspect" class="org.sourcelesslight.aspects.LoggingAspect">
			<property name="writeLogToFile" ref="LoggingToFile"/>
		</bean>
		
		<bean name="LoggingToFile" class="org.sourcelesslight.aspects.WriteLogToFile">
			<property name="messageSource" ref="messageSource"/>
		</bean>
		
</beans>